{
  "compilerOptions": {
    "jsx": "react-jsx",             // ✅ modern JSX transform (React 17+)
    "types": ["react", "react-dom", "vite/client"], // ✅ ensures JSX namespace is included
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",  // or "NodeNext" depending on your setup
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src"]
}
