{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "vite/client"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src"]
}
